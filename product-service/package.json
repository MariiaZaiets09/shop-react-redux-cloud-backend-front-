{
  "name": "product-service",
  "version": "1.0.0",
  "description": "The Product Service creates the API Gateway and Lambda functions",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "format": "prettier --write .",
    "package-build": "sls package",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:prod": "sls deploy --stage prod",
    "remove:dev-stack": "sls remove --stage dev --region us-east-1",
    "remove:prod-stack": "sls remove --stage prod --region us-east-1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.73",
    "@types/jest": "^29.5.12",
    "@types/node": "^10.17.56",
    "@types/serverless": "^1.78.23",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-es6": "^1.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "serverless-webpack": "^5.4.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.10.2",
    "typescript": "^5.4.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "winston": "^3.3.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
